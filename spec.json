{
  "openapi": "3.1.1",
  "info": {
    "title": "Mining Development Kit API",
    "description": "API for the Mining Development Kit",
    "version": "1.4.0"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/kkurucz/mining_development_kit_api/1.4.0"
    }
  ],
  "paths": {
    "/api/v1/timeseries": {
      "get": {
        "summary": "Get time series data",
        "description": "Retrieve time series data based on specified parameters",
        "operationId": "getTimeSeries",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "description": "Start timestamp for the time series data",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end",
            "in": "query",
            "description": "End timestamp for the time series data",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "interval",
            "in": "query",
            "description": "Time interval for data points",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1m", "5m", "15m", "30m", "1h", "4h", "1d", "1w", "1M"]
            }
          },
          {
            "name": "metric",
            "in": "query",
            "description": "Metric type to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimeSeriesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": ["Time Series"]
      },
      "post": {
        "summary": "Create time series data",
        "description": "Submit new time series data points",
        "operationId": "createTimeSeries",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TimeSeriesData"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimeSeriesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": ["Time Series"]
      }
    }
  },
  "components": {
    "schemas": {
      "TimeSeriesResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeSeriesPoint"
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "count": {
                "type": "integer",
                "description": "Number of data points returned"
              },
              "start": {
                "type": "string",
                "format": "date-time",
                "description": "Start timestamp of the data"
              },
              "end": {
                "type": "string",
                "format": "date-time",
                "description": "End timestamp of the data"
              },
              "interval": {
                "type": "string",
                "description": "Time interval between data points"
              }
            }
          }
        },
        "required": ["data"]
      },
      "TimeSeriesData": {
        "type": "object",
        "properties": {
          "metric": {
            "type": "string",
            "description": "Metric identifier"
          },
          "points": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeSeriesPoint"
            }
          },
          "tags": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Optional tags for categorizing the data"
          }
        },
        "required": ["metric", "points"]
      },
      "TimeSeriesPoint": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of the data point"
          },
          "value": {
            "type": "number",
            "description": "Numeric value at this timestamp"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true,
            "description": "Optional metadata for this data point"
          }
        },
        "required": ["timestamp", "value"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Error code"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          },
          "details": {
            "type": "object",
            "additionalProperties": true,
            "description": "Additional error details"
          }
        },
        "required": ["code", "message"]
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    },
    {
      "BearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Time Series",
      "description": "Operations related to time series data"
    }
  ]
}
